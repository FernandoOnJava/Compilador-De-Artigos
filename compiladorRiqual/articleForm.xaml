<Window x:Class="DocumentUploader.CompileDocumentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:local="clr-namespace:WpfDocCompiler"
        mc:Ignorable="d"
        Title="TMQ Document Compiler" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <local:FileNameConverter x:Key="FileNameConverter"/>
        <local:FileIconConverter x:Key="FileIconConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#94A3B8"/>
                    <Setter Property="Foreground" Value="#E2E8F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Small Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E2E8F0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CBD5E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="TMQ Document Compiler" FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                    <TextBlock Text="Compile múltiplos artigos num documento único" FontSize="16" Foreground="#64748B" Margin="0,5,0,0"/>
                </StackPanel>

                <Image Grid.Column="1" Source="pack://application:,,,/Images/tmq_logo.png" Height="50" Width="50" 
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Files List -->
            <Border Background="White" CornerRadius="8" Margin="0,0,15,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="8,8,0,0" Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Artigos" FontSize="18" FontWeight="SemiBold" Foreground="#1E293B"/>

                            <Button Grid.Column="1" Click="AddFiles_Click" Style="{StaticResource ModernButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+" FontSize="18" Margin="0,0,5,0"/>
                                    <TextBlock Text="Adicionar"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Files ListBox -->
                    <ListBox Grid.Row="1" x:Name="filesListBox" 
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding}"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Background="Transparent"
                             Padding="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8FAFC" CornerRadius="6" Margin="5" 
                                        Padding="15,12" Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.05"/>
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" Width="24" Height="24" Margin="0,0,12,0"
                                               Source="{Binding Converter={StaticResource FileIconConverter}}"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Converter={StaticResource FileNameConverter}}"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"
                                                   Foreground="#334155"/>

                                        <TextBlock Grid.Column="2" Text="⋮⋮" FontSize="16" Foreground="#94A3B8"
                                                   VerticalAlignment="Center" Margin="10,0,0,0"
                                                   ToolTip="Arraste para reordenar"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- List Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="20,10" HorizontalAlignment="Right">
                        <Button Click="MoveUp_Click" Style="{StaticResource IconButton}" Margin="0,0,5,0" ToolTip="Mover para cima">
                            <TextBlock Text="↑" FontSize="18" Foreground="#64748B"/>
                        </Button>
                        <Button Click="MoveDown_Click" Style="{StaticResource IconButton}" Margin="0,0,10,0" ToolTip="Mover para baixo">
                            <TextBlock Text="↓" FontSize="18" Foreground="#64748B"/>
                        </Button>
                        <Button Click="RemoveFile_Click" Style="{StaticResource IconButton}" ToolTip="Remover">
                            <TextBlock Text="×" FontSize="20" Foreground="#EF4444"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Required Files Status -->
            <StackPanel Grid.Column="1">
                <!-- Capa Status -->
                <Border Background="White" CornerRadius="8" Margin="0,0,0,15" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="📄 Capa" FontSize="16" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,10"/>
                        <TextBlock x:Name="capaStatus" Text="Carregando..." 
                                   FontSize="13" Foreground="#10B981" FontWeight="Medium"/>
                    </StackPanel>
                </Border>

                <!-- Conselho Editorial Status -->
                <Border Background="White" CornerRadius="8" Margin="0,0,0,15" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="👥 Conselho Editorial" FontSize="16" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,10"/>
                        <TextBlock x:Name="conselhoStatus" Text="Carregando..." 
                                   FontSize="13" Foreground="#10B981" FontWeight="Medium"/>
                    </StackPanel>
                </Border>

                <!-- Editorial Status -->
                <Border Background="White" CornerRadius="8" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="✍️ Editorial" FontSize="16" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,10"/>
                        <TextBlock x:Name="editorialStatus" Text="Carregando..." 
                                   FontSize="13" Foreground="#10B981" FontWeight="Medium"/>
                    </StackPanel>
                </Border>

                <!-- Ordem de Compilação -->
                <Border Background="#EFF6FF" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="📋 Ordem de Compilação" FontSize="14" FontWeight="SemiBold" 
                                 Foreground="#1E40AF" Margin="0,0,0,10"/>
                        <TextBlock FontSize="12" Foreground="#1E40AF" TextWrapping="Wrap">
                            <TextBlock.Text>
                                1. Capa
2. Página em Branco
3. Conselho Editorial
4. Lista de Autores
5. Índice
6. Editorial
7. Artigos (ordem definida)
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Compile Button -->
                <Button x:Name="btnCompile" Click="Compile_Click" Style="{StaticResource SuccessButton}" 
                        Margin="0,30,0,0" HorizontalAlignment="Stretch" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚡" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Compilar Revista"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid> Panel Grid.Column="1">
        <!-- Editorial Section -->
        <Border Background="White" CornerRadius="8" Margin="0,0,0,15" Padding="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Editorial" FontSize="16" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,10"/>
                <TextBlock x:Name="editorialStatus" Text="Nenhum ficheiro selecionado" 
                                   FontSize="13" Foreground="#94A3B8" Margin="0,0,0,10"/>
                <Button Click="AddEditorial_Click" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Stretch">
                    <TextBlock Text="Selecionar Editorial"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Conselho Editorial Section -->
        <Border Background="White" CornerRadius="8" Padding="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Conselho Editorial" FontSize="16" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,10"/>
                <TextBlock x:Name="conselhoStatus" Text="Nenhum ficheiro selecionado" 
                                   FontSize="13" Foreground="#94A3B8" Margin="0,0,0,10"/>
                <Button Click="AddConselho_Click" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Stretch">
                    <TextBlock Text="Selecionar Conselho"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Compile Button -->
        <Button x:Name="btnCompile" Click="Compile_Click" Style="{StaticResource SuccessButton}" 
                        Margin="0,30,0,0" HorizontalAlignment="Stretch" IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚡" FontSize="18" Margin="0,0,8,0"/>
                <TextBlock Text="Compilar Documento"/>
            </StackPanel>
        </Button>
        </StackPanel>
    </Grid>

    <!-- Progress Bar -->
    <Grid Grid.Row="2" Visibility="{Binding IsCompiling, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="White" Height="60">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1" Direction="270"/>
        </Grid.Effect>

        <Grid Margin="30,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="A compilar documento..." FontSize="14" Foreground="#64748B" Margin="0,0,0,8"/>

            <ProgressBar Grid.Row="1" Height="8" Value="{Binding ProgressValue}" Maximum="100">
                <ProgressBar.Template>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="#E2E8F0" CornerRadius="4"/>
                            <Border Background="#3B82F6" CornerRadius="4" HorizontalAlignment="Left"
                                        Width="{Binding RelativeSource={RelativeSource TemplatedParent}, 
                                               Path=Value, Converter={StaticResource ProgressToWidthConverter}}">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, 
                                                       Converter={StaticResource ValueToScaleConverter}}" />
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </ProgressBar.Template>
            </ProgressBar>
        </Grid>
    </Grid>

    <!-- Status Bar -->
    <Border Grid.Row="3" Background="#1E293B" Padding="30,15">
        <TextBlock x:Name="statusTextBlock" Text="Pronto" Foreground="White" FontSize="13"/>
    </Border>
    </Grid>
</Window>