<Window x:Class="DocumentUploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revista Digital - Upload de Documentos" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="800"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Definição de cores -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#6C8DC5"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E8F4FD"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#F5F27C"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="SuccessLightBrush" Color="#E8F5E8"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F39C12"/>
        <SolidColorBrush x:Key="WarningLightBrush" Color="#FFF5E6"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="ErrorLightBrush" Color="#FFE6E6"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLightBrush" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E6ED"/>

        <!-- Style para cards modernos -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E6ED" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    BlurRadius="8" 
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style para botões modernos -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A7BB8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4A6BA8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style para botões secundários -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0ED70"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E8E564"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Style="{StaticResource ModernCardStyle}" 
                Padding="30,25"
                Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="📚 Upload de Documentos" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource PrimaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock Text="Carregue os seguintes documentos para proseguir com a criação da revista!" 
                          FontSize="15" 
                          Foreground="{StaticResource TextLightBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>
                <Border Background="{StaticResource AccentBrush}" 
                        CornerRadius="15" 
                        Padding="12,6"
                        HorizontalAlignment="Center">
                    <TextBlock Text="Formato obrigatório: .docx" 
                              FontSize="12" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextBrush}"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" 
                Style="{StaticResource ModernCardStyle}"
                Padding="30">
            <StackPanel>

                <!-- Documento 1 - Capa -->
                <Border Background="{StaticResource PrimaryLightBrush}" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Background="{StaticResource PrimaryBrush}"
                                CornerRadius="20" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,15,0">
                            <TextBlock Text="1" 
                                      Foreground="White" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center">
                            <TextBlock Text="📄 Capa da Revista" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource PrimaryBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtFile1" 
                                      Text="Documento com o design e informações da capa" 
                                      FontSize="13"
                                      Foreground="{StaticResource TextLightBrush}"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                x:Name="btnSelect1"
                                Content=" Selecionar "
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="SelectFile1_Click"/>
                    </Grid>
                </Border>

                <!-- Documento 2 - Conselho Editorial -->
                <Border Background="{StaticResource SuccessLightBrush}" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="{StaticResource SuccessBrush}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Background="{StaticResource SuccessBrush}"
                                CornerRadius="20" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,15,0">
                            <TextBlock Text="2" 
                                      Foreground="White" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center">
                            <TextBlock Text="👥 Conselho Editorial" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource SuccessBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtFile2" 
                                      Text="Lista dos membros do conselho editorial" 
                                      FontSize="13"
                                      Foreground="{StaticResource TextLightBrush}"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                x:Name="btnSelect2"
                                Content=" Selecionar "
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="SelectFile2_Click"/>
                    </Grid>
                </Border>

                <!-- Documento 3 - Editorial -->
                <Border Background="{StaticResource WarningLightBrush}" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="{StaticResource WarningBrush}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Background="{StaticResource WarningBrush}"
                                CornerRadius="20" 
                                Width="40" 
                                Height="40" 
                                Margin="0,0,15,0">
                            <TextBlock Text="3" 
                                      Foreground="White" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center">
                            <TextBlock Text="✍️ Editorial" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource WarningBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtFile3" 
                                      Text="Texto editorial da edição da revista" 
                                      FontSize="13"
                                      Foreground="{StaticResource TextLightBrush}"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                x:Name="btnSelect3"
                                Content=" Selecionar "
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="SelectFile3_Click"/>
                    </Grid>
                </Border>

                <!-- Status Area -->
                <Border x:Name="statusBorder"
                        Background="{StaticResource ErrorLightBrush}" 
                        BorderBrush="{StaticResource ErrorBrush}"
                        BorderThickness="1"
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="statusIcon"
                                  Text="⚠️" 
                                  FontSize="16" 
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock x:Name="txtStatus" 
                                      Text="Selecione todos os 3 documentos para prosseguir"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ErrorBrush}"/>
                            <TextBlock x:Name="txtStatusDetail"
                                      Text="Faltam: Capa, Conselho Editorial e Editorial"
                                      FontSize="12"
                                      Foreground="{StaticResource TextLightBrush}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Margin="0,30,0,0">
            <Button x:Name="btnProceed"
                    Content="  🚀 Prosseguir  "
                    Style="{StaticResource ModernButtonStyle}"
                    FontSize="16"
                    Padding="30,15"
                    HorizontalAlignment="Center"
                    IsEnabled="False"
                    Click="Proceed_Click"/>
        </Border>
    </Grid>
</Window>